                            <div class="input-contact">
                                <p class="text-intro text-center">
                                    “Şikayet ve isteklerinizi formu doldurarak kolayca iletebilirsiniz...”
                                </p>

                                <p class="icon text-center">
                                    <a href="#">
                                        <img src="~/Content/img/other/contact_mess.png" alt="img">
                                    </a>
                                </p>

                                <div class="d-flex justify-content-center">
                                    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                                        <div class="contact-form">
                                            <form action="#" method="post" enctype="multipart/form-data">
                                                <div class="form-fields">
                                                    <div class="form-group row">
                                                        <div class="col-md-6">
                                                            <input class="form-control" name="name" placeholder="Adınızı giriniz...">
                                                        </div>
                                                        <div class="col-md-6 margin-bottom-mobie">
                                                            <input class="form-control" name="from" type="email" value="" placeholder="Email adresiniz..">
                                                        </div>
                                                    </div>
                                                    <div class="form-group row">
                                                        <div class="col-md-12 margin-bottom-mobie">
                                                            <input class="form-control" name="from" type="email" value="" placeholder="Konu">
                                                        </div>
                                                    </div>
                                                    <div class="form-group row">
                                                        <div class="col-md-12">
                                                            <textarea class="form-control" name="message" placeholder="Mesaj" rows="8"></textarea>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div>
                                                    <button class="btn" type="submit" name="submitMessage">
                                                        <img class="img-fl" src="~/Content/img/other/contact_email.png" alt="img"> Gönder
                                                    </button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
