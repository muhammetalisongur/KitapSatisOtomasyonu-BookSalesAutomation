<!DOCTYPE html>
<html lang="zxx">
<head>
    <title>@ViewBag.Title | Kitap Satis Admin Panel</title>
    <!-- custom-theme -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Esteem Responsive web template, Bootstrap Web Templates, Flat Web Templates, Android Compatible web template,
Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
    <script type="application/x-javascript">
        addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false);
               function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!-- //custom-theme -->
    <link href="~/Content/css/bootstrap.css" rel="stylesheet" type="text/css" media="all" />
    <link href="~/Content/css/component.css" rel="stylesheet" type="text/css" media="all" />
    <link href="~/Content/css/style_grid.css" rel="stylesheet" type="text/css" media="all" />
    <link href="~/Content/css/style.css" rel="stylesheet" type="text/css" media="all" />
    <link href="~/Content/PagedList.css" rel="stylesheet" />
    <link href="~/Content/site.css" rel="stylesheet" />
    <!-- font-awesome-icons -->
    <link href="~/Content/css/font-awesome.css" rel="stylesheet">
    <!-- //font-awesome-icons -->
    <link href="//fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i,800" rel="stylesheet">
</head>
<body>
    <!-- banner -->
    <div class="wthree_agile_admin_info">
        <!-- /w3_agileits_top_nav-->
        <!-- /nav-->

        <div class="w3_agileits_top_nav">
            <ul id="gn-menu" class="gn-menu-main">
                <!-- /nav_agile_w3l -->
                @Html.Partial("_Menu")
                <!-- //nav_agile_w3l -->
                <li class="second logo"><h1><a href="main-page.html"><i class="fa fa-graduation-cap" aria-hidden="true"></i>Kitap Satis Admin Panel</a></h1></li>
                @Html.Partial("_AdminResim")
                @Html.Partial("_Bildirim")
                @Html.Partial("_Mesajlasma")
                @Html.Partial("_Gorevler")

                @Html.Partial("_Arama")
                <li class="second full-screen">
                    <section class="full-top">
                        <button id="toggle"><i class="fa fa-arrows-alt" aria-hidden="true"></i></button>
                    </section>
                </li>

            </ul>
            <!-- //nav -->

        </div>
        <div class="clearfix"></div>
        <!-- /inner_content-->
        <div class="inner_content">

            @RenderBody()

        </div>
        <!-- //inner_content-->
    </div>
    <!-- banner -->
    <!--copy rights start here-->
    <div class="copyrights" style=" position: inherit; left: 0; bottom: 0; min-height: auto; width: 100%; overflow: hidden;">
        <p>© @DateTime.Now.Year Kutuphane Platformu. All Rights Reserved | Design by  <a href="http://github.com/muhammetalisongur/" target="_blank">Muhammet Ali Songur</a> </p>
    </div>
    <!--copy rights end here-->
    <!-- js -->

    <script type="text/javascript" src="~/Scripts/js/jquery-2.1.4.min.js"></script>
    <script src="~/Scripts/js/modernizr.custom.js"></script>

    <script src="~/Scripts/js/classie.js"></script>
    <script src="~/Scripts/js/gnmenu.js"></script>
    <script>
        new gnMenu(document.getElementById('gn-menu'));
    </script>
    <!-- tables -->
    <!-- //js -->
    <script src="~/Scripts/js/screenfull.js"></script>
    <script>
        $(function () {
            $('#supported').text('Supported/allowed: ' + !!screenfull.enabled);

            if (!screenfull.enabled) {
                return false;
            }



            $('#toggle').click(function () {
                screenfull.toggle($('#container')[0]);
            });
        });
    </script>

    @*hata var duzetilecek*@
    @*<script src="~/Scripts/js/jquery.nicescroll.js"></script>*@

    <script src="~/Scripts/js/scripts.js"></script>

    <script type="text/javascript" src="~/Scripts/js/bootstrap-3.1.1.min.js"></script>

    @RenderSection("scripts", required: false)

</body>
</html>