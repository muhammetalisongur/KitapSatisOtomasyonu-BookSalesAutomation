@using KutuphanePlatformu.Models.EntityFramework
@model List<Kategori>
@{
    ViewBag.Title = "Kategori";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" type="text/css" href="~/Content/css/table-style.css" />
<link rel="stylesheet" type="text/css" href="~/Content/css/basictable.css" />

<!-- breadcrumbs -->
<div class="w3l_agileits_breadcrumbs">
    <div class="w3l_agileits_breadcrumbs_inner">
        <ul>
            <li><a href="main-page.html">Anasayfa</a><span>«</span></li>

            <li>Kategoriler</li>
        </ul>
    </div>
</div>
<!-- //breadcrumbs -->

<div class="inner_content_w3_agile_info two_in">
    <h2 class="w3_inner_tittle">Kategoriler</h2>
    <!-- tables -->

    <div class="agile-tables">
        <div class="w3l-table-info agile_info_shadow">
            <h3 class="w3_inner_tittle two">@*Kategoriler*@</h3>
            <table id="table">
                <thead>
                    <tr>
                        <th>Ad</th>
                        <th>Guncelle</th>
                        <th>Sil</th>

                    </tr>
                </thead>

                <tbody>
                    @foreach (var kategori in Model)
                    {
                        <tr>
                            <td>@kategori.Ad</td>
                            <td><a href="#" class="btn btn-success">Guncelle</a></td>
                            <td><a href="#" class="btn btn-danger">Sil</a></td>
                        </tr>
                    }
                </tbody>

            </table>

            @*<code class="js">
                $('#table').basictable();
            </code>*@
        </div>

    </div>
</div>


<!-- tables -->

<script type="text/javascript" src="~/Scripts/js/jquery.basictable.min.js"></script>
